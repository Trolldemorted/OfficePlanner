@using Htmx.TagHelpers
<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width">
    <meta name="htmx-config"
          historyCacheSize="20"
          indicatorClass="htmx-indicator"
          includeAspNetAntiforgeryToken="true" />
    <title>@(ViewBag.Title ?? "OfficePlanner")</title>
    <link rel="stylesheet" href="~/_static/css/officeplanner.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" crossorigin="anonymous">
    <script src="https://unpkg.com/htmx.org@1.9.12" defer></script>
    <script src="@HtmxAntiforgeryScriptEndpoints.Path" defer></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Page("Index")"
           data-hx-get="@Url.Page("Index")"
           data-hx-target="#main"
           data-hx-replace-url="@Url.Page("Index")">
            <span class="align-middle">Office Planner</span>
        </a>
    </nav>

    <div id="main">
        @RenderBody()
    </div>

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Not proudly made by annoyed employees</p>
        </div>
    </footer>
</body>
</html>
